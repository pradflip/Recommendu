@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (!SignInManager.IsSignedIn(User))
{
    var ano = DateTime.Now.ToString("yyyy");
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent">
            <div class="container-fluid p-0">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/Resources/SiteImages/Logo.png" class="img-logo" alt="Imagem responsiva" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1 d-sm-inline-flex justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark me-3 box-shadow" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn btn-primary me-4" asp-area="Identity" asp-page="/Account/Register">Registrar-se</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <footer>
        <div class="container-fluid position-absolute bottom-0 start-0 mt-4">
            <div class="row">
                <div class="col-8 align-self-center">
                    <p class="fw-bold fs-5">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light pe-3">Políticas de privacidade</a>
                    </p>
                </div>
                <div class="col-4 d-flex justify-content-end align-self-center">
                    <p class="text-light fw-bold fs-5">
                        &copy; @ano - Recommendu
                    </p>
                </div>
            </div>
        </div>
    </footer>
}