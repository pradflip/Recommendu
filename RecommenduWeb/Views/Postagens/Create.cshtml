@model RecommenduWeb.Models.ViewModels.PostagemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nova publicação:</h1>
<h2 style="color: red">Slide 9</h2>

<h4>Postagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categoria" id="lblCategoria" class="control-label"></label>
                <select asp-for="Categoria" id="slcCategoria" class="form-control" onchange="CarregaForm()">
                    <option value="0" style="color: gray" selected>Selecione...</option>
                    <option value="1">Produto</option>
                    <option value="2">Serviço</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label" id="lblTitulo"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicoAlvo" class="control-label"></label>
                <input asp-for="PublicoAlvo" class="form-control" />
                <span asp-validation-for="PublicoAlvo" class="text-danger"></span>
            </div>
            <div class="form-control">
                <label asp-for="PostFile" class="control-label"></label>
                <input asp-for="PostFile" class="form-control" />
                <span asp-validation-for="PostFile" class="text-danger"></span>
            </div>
            <div id="formProduto" hidden="true">
                <div class="form-group">
                    <label asp-for="Fabricante" class="control-label"></label>
                    <input asp-for="Fabricante" class="form-control" />
                    <span asp-validation-for="Fabricante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkProduto" class="control-label"></label>
                    <input asp-for="LinkProduto" class="form-control" />
                    <span asp-validation-for="LinkProduto" class="text-danger"></span>
                </div>
            </div>
            <div id="formServico" hidden="true">
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(model => model.Estado, ViewData["Estado"] as SelectList, new {@class="form-control", @id="ddlEstado"})
                    <label asp-for="Estado"></label>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Cidade" class="form-control" id="ddlCidades" aria-required="true" placeholder="Nome da cidade" />
                    <label asp-for="Cidade">Cidade</label>
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                    <span style="color: #4684b0" title="Preencha corretamente para sua publicação ser encontrada com mais facilidade">&#9432 &#x1F6C8;</span>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contato" class="control-label"></label>
                    <input asp-for="Contato" class="form-control" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" disabled="true" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Postagens" class="btn btn-light">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script scr="~/js/site.js"></script>
    }
}
