@model RecommenduWeb.Models.ViewModels.PostagemViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1 class="m-5">Editar Postagem</h1>
    <div class="row">
        <div class="d-flex justify-content-center">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostagemId" />
                <div class="form-group row mb-3">
                    <label asp-for="Categoria" class="control-label col text-end fw-bold"></label>
                    <input asp-for="Categoria" class="form-control" readonly />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group row mb-3">
                    @if (Model.Categoria == "Produto")
                    {
                        <label asp-for="Titulo" class="control-label col text-end fw-bold">Nome do produto</label>
                    }
                    else if (Model.Categoria == "Serviço")
                    {
                        <label asp-for="Titulo" class="control-label col text-end fw-bold">Nome do serviço</label>
                    }
                    <input asp-for="Titulo" class="form-control col-lg-6" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="Descricao" class="control-label col text-end fw-bold"></label>
                    <textarea asp-for="Descricao" class="form-control col-lg-6" cols="60" rows="6"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="PublicoAlvo" class="control-label col text-end fw-bold"></label>
                    <input asp-for="PublicoAlvo" class="form-control col-lg-6" />
                    <span asp-validation-for="PublicoAlvo" class="text-danger"></span>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="PostFile" class="control-label col text-end fw-bold"></label>
                    <input asp-for="PostFile" onchange="ValidarArquivo()" id="fileInput" accept=".png, .jpg, .jpeg" class="form-control col-lg-6" />
                    <span asp-validation-for="PostFile" class="text-danger"></span>
                </div>
                @if (Model.Categoria.Equals("Produto"))
                {
                    <div class="form-group row mb-3">
                        <label asp-for="Fabricante" class="control-label col text-end fw-bold"></label>
                        <input asp-for="Fabricante" class="form-control col-lg-6" />
                        <span asp-validation-for="Fabricante" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="LinkProduto" class="control-label col text-end fw-bold"></label>
                        <input asp-for="LinkProduto" class="form-control col-lg-6" />
                        <span asp-validation-for="LinkProduto" class="text-danger"></span>
                    </div>
                }
                else if (Model.Categoria.Equals("Serviço"))
                {
                    <div class="form-floating mb-3">
                        @Html.DropDownListFor(model => model.Estado, ViewData["Estado"] as SelectList, new {@class="form-control", @id="ddlEstado"})
                        <label asp-for="Estado"></label>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Cidade" class="form-control" aria-required="true" placeholder="Nome da cidade" />
                        <label asp-for="Cidade">Cidade</label>
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                        <span style="color: #4684b0" title="Preencha corretamente para sua publicação ser encontrada com mais facilidade">&#x1F6C8;</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label"></label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contato" class="control-label"></label>
                        <input asp-for="Contato" class="form-control" />
                        <span asp-validation-for="Contato" class="text-danger"></span>
                    </div>
                }
                <div class="form-group row justify-content-evenly">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary col-lg-3">Voltar</a>
                    <input type="submit" value="Save" class="btn btn-success col-lg-6" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
