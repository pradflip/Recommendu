@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinição de senha";
}

<div class="container d-flex justify-content-center my-5 ms-xxl-0 ms-5">
    <div class="row">
        <div class="col-12">
            <h1 class="py-3">@ViewData["Title"]</h1>
            <h2 class="fw-normal">Redefina sua senha.</h2>
            <hr />
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger py-3" role="alert"></div>
            <div class="row">
                <input asp-for="Input.Code" type="hidden" />
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label ms-3"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Password" class="form-label ms-3"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.ConfirmPassword" class="form-label ms-3"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-preto py-3 ">Redefinir</button>
                </div>
            </div>
        </form>
    </div>
</div>

